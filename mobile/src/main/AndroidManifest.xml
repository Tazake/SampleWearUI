<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tazake.wearui.sample" >

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault" >
        <activity
            android:name="tazake.wearui.sample.WearActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BoxInsetLayoutActivity"
            android:label="@string/title_activity_box_inset_layout" >
        </activity>
        <activity
            android:name=".CardActivity"
            android:label="@string/title_activity_card" >
        </activity>
        <activity
            android:name=".CustomCardActivity"
            android:label="@string/title_activity_custom_card" >
        </activity>
        <activity
            android:name=".CircledImageViewActivity"
            android:label="@string/title_activity_circled_image_view" >
        </activity>
        <activity
            android:name=".ConfirmationMainActivity"
            android:label="@string/confirmation_activity" >
        </activity>
        <activity android:name="android.support.wearable.activity.ConfirmationActivity" />
        <activity
            android:name=".DismissOverlayViewActivity"
            android:label="@string/title_activity_dismiss_overlay_view" >
        </activity>
        <activity
            android:name=".GridViewPagerActivity"
            android:label="@string/title_activity_grid_view_pager" >
        </activity>
    </application>

</manifest>
